<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EliteTimeSheetMobile.View.Login"
             xmlns:local="clr-namespace:EliteTimeSheetMobile"
             xmlns:custom="clr-namespace:EliteTimeSheetMobile">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Image x:Name="LogoImage"
                   Margin="0,70,0,10"
                   HorizontalOptions="Center" />
            <custom:CustomEntry x:Name="userName"
                                CornerRadius="18"
                                Margin="20,20,20,10"
                                Text="{Binding UserName}"
                                IsCurvedCornersEnabled="True"
                                HorizontalTextAlignment="Center"
                                FontSize="17"
                                BorderColor="Gray"
                                BorderWidth="5"
                                HeightRequest="60"
                                Placeholder="User Name"
                                PlaceholderColor="Gray"
                                TextColor="Black"
                                WidthRequest="100" />
            <custom:CustomEntry x:Name="password"
                                CornerRadius="18"
                                Margin="20,20"
                                Text="{Binding Password}"
                                IsCurvedCornersEnabled="True"
                                HorizontalTextAlignment="Center"
                                FontSize="17"
                                BorderColor="Gray"
                                BorderWidth="5"
                                HeightRequest="60"
                                IsPassword="True"
                                Placeholder="Password"
                                PlaceholderColor="Gray"
                                TextColor="Black"
                                WidthRequest="100" />
            <Button x:Name="loginButton" Clicked="loginButton_Clicked" Text="Login"
                    BorderColor="#3F51B5"
                    BorderWidth="2"
                    Background="#FFFFFF"
                    CornerRadius="10"
                    Margin="30,30"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>