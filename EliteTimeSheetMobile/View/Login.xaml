<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EliteTimeSheetMobile.View.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login" Margin="0,30,0,10" FontSize="Title"
                HorizontalOptions="Center" />
            <Entry x:Name="userName" Text="{Binding UserName}" Placeholder="User Name" Margin="10,10">
            </Entry>
            <Entry x:Name="password" Text="{Binding Password}" Placeholder="Password" Margin="10,10">
             </Entry>
            <Button x:Name="loginButton" Clicked="loginButton_Clicked" Text="Login" TextColor="White" BackgroundColor="DarkRed" Margin="30,30"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>